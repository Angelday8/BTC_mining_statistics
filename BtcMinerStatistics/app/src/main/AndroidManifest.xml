<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="maximedelange.btcminerstatistics">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/appicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Screens.Screens.HomeScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Screens.Screens.UserScreen"
            android:label="@string/title_activity_user_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Screens.Screens.PoolScreen"
            android:label="@string/title_activity_pool_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Screens.Screens.BlockInformationScreen"
            android:label="@string/title_activity_block_information_screen"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>