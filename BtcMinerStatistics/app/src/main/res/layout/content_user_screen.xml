<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="maximedelange.btcminerstatistics.Screens.Screens.UserScreen"
    tools:showIn="@layout/activity_user_screen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorDarkGreen"
            android:gravity="center"
            android:text="PROFILE"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txtConfirmedReward"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUnconfirmedReward"
            android:layout_toEndOf="@+id/imgProfile"
            android:layout_toRightOf="@+id/imgProfile"
            android:text="Confirmed reward"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/txtUnconfirmedReward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtWallet"
            android:layout_toEndOf="@+id/imgProfile"
            android:layout_toRightOf="@+id/imgProfile"
            android:text="Unconfirmed reward"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="35dp" />

        <TextView
            android:id="@+id/txtLastShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEstimatedReward"
            android:layout_toEndOf="@+id/imgProfile"
            android:layout_toRightOf="@+id/imgProfile"
            android:text="Last share"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="73dp" />

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imgProfile"
            android:text="Username"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtEstimatedReward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtConfirmedReward"
            android:layout_toEndOf="@+id/imgProfile"
            android:layout_toRightOf="@+id/imgProfile"
            android:text="Estimated reward"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="54dp" />

        <TextView
            android:id="@+id/txtWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_toEndOf="@+id/imgProfile"
            android:layout_toRightOf="@+id/imgProfile"
            android:text="Wallet"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="323dp"
            tools:layout_editor_absoluteY="35dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="200dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorDarkGreen"
                android:gravity="center"
                android:text="Mining information"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtHashrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hash rate"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteY="92dp" />

            <TextView
                android:id="@+id/txtMineRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mine rating"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtWorkers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Workers"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteY="130dp" />

            <TextView
                android:id="@+id/txtScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Score"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteY="111dp" />

            <TextView
                android:id="@+id/txtAlive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alive"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteY="149dp" />

            <TextView
                android:id="@+id/txtSendThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send threshold"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteY="73dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorRed" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorRed" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
