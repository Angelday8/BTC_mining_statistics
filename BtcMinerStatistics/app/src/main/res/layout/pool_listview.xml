<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGreen">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorRed" />

        <TextView
            android:id="@+id/txtBlockInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorGreen"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/colorLightGreen"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="356dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/txtDateStarted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtBlockNr"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/colorBeige"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="54dp" />

        <TextView
            android:id="@+id/txtIsMature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/colorBeige"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="73dp" />

        <TextView
            android:id="@+id/txtMiningDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtIsMature"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/colorBeige"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="193dp" />

        <TextView
            android:id="@+id/txtDateFound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtMiningDuration"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/colorBeige"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="35dp" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGreen"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/colorLightGreen"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtTotalShares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/colorBeige"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="155dp" />

        <TextView
            android:id="@+id/txtTotalScores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/colorBeige"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="136dp" />

        <TextView
            android:id="@+id/txtConfirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/colorBeige"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="117dp" />

        <TextView
            android:id="@+id/txtReward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/colorBeige"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="212dp" />

        <TextView
            android:id="@+id/txtHashRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/colorBeige"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="174dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorRed" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>